// PersistenceConfig.java
package com.example.springhiber;

import org.springframework.context.annotation.*;
import org.springframework.orm.hibernate5.*;
import org.springframework.transaction.annotation.EnableTransactionManagement;
import org.springframework.transaction.PlatformTransactionManager;
import org.springframework.jdbc.datasource.DriverManagerDataSource;
import javax.sql.DataSource;
import java.util.Properties;

@Configuration
@ComponentScan(basePackages = "com.example.springhiber")
@EnableTransactionManagement
public class PersistenceConfig {

    @Bean
    public DataSource dataSource(){
        DriverManagerDataSource ds = new DriverManagerDataSource();
        ds.setDriverClassName("com.mysql.cj.jdbc.Driver");
        ds.setUrl("jdbc:mysql://localhost:3306/testdb");
        ds.setUsername("root");
        ds.setPassword("root");
        return ds;
    }

    @Bean
    public LocalSessionFactoryBean sessionFactory(DataSource ds){
        LocalSessionFactoryBean fb = new LocalSessionFactoryBean();
        fb.setDataSource(ds);
        fb.setPackagesToScan("com.example.springhiber"); // contains Student entity
        Properties p = new Properties();
        p.put("hibernate.dialect","org.hibernate.dialect.MySQLDialect");
        p.put("hibernate.hbm2ddl.auto","update");
        p.put("hibernate.show_sql","true");
        fb.setHibernateProperties(p);
        return fb;
    }

    @Bean
    public PlatformTransactionManager txManager(SessionFactory sf){
        return new HibernateTransactionManager(sf);
    }
}
